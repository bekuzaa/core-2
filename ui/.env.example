# datarhei Core UI - Environment Configuration
# Copy this file to .env and update with your values

# ===========================================
# API Configuration
# ===========================================

# Base URL for the datarhei Core API
# Default: Uses Vite proxy to /api
# Production: Set to your Core backend URL
VITE_API_BASE_URL=http://localhost:8080

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===========================================
# Application Configuration
# ===========================================

# Application title (shown in browser tab)
VITE_APP_TITLE=datarhei Core

# Application description
VITE_APP_DESCRIPTION=FFmpeg Process Management & Streaming

# Application version (optional - will use package.json if not set)
# VITE_APP_VERSION=1.0.0

# ===========================================
# Development Configuration
# ===========================================

# Enable debug mode (shows detailed logs in console)
VITE_DEBUG=false

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# ===========================================
# Feature Flags
# ===========================================

# Enable/disable features
VITE_ENABLE_WIZARD=true
VITE_ENABLE_FILE_MANAGER=true
VITE_ENABLE_METRICS=true
VITE_ENABLE_SESSIONS=true

# ===========================================
# Analytics & Monitoring
# ===========================================

# Enable error tracking (set to your Sentry DSN if using)
# VITE_SENTRY_DSN=

# Enable analytics (optional)
# VITE_ANALYTICS_ID=

# ===========================================
# Build Configuration
# ===========================================

# Base path for deployment (e.g., if serving from /ui)
# VITE_BASE_PATH=/

# Enable source maps in production
# VITE_SOURCE_MAPS=false

# ===========================================
# Authentication
# ===========================================

# Default auth timeout (minutes)
VITE_AUTH_TIMEOUT=60

# Remember login duration (days)
VITE_REMEMBER_ME_DURATION=30

# ===========================================
# UI Configuration
# ===========================================

# Default theme (light or dark)
VITE_DEFAULT_THEME=dark

# Enable theme switching
VITE_ENABLE_THEME_SWITCH=true

# Refresh intervals (milliseconds)
VITE_REFRESH_INTERVAL_DASHBOARD=5000
VITE_REFRESH_INTERVAL_PROCESSES=3000
VITE_REFRESH_INTERVAL_METRICS=2000

# ===========================================
# Video Player Configuration
# ===========================================

# Video.js configuration
VITE_PLAYER_AUTOPLAY=false
VITE_PLAYER_CONTROLS=true
VITE_PLAYER_PRELOAD=auto

# ===========================================
# Limits & Constraints
# ===========================================

# Maximum file upload size (MB)
VITE_MAX_UPLOAD_SIZE=100

# Maximum log lines to display
VITE_MAX_LOG_LINES=1000

# Pagination page size
VITE_PAGE_SIZE=20

# ===========================================
# External Services (Optional)
# ===========================================

# CDN URL for static assets
# VITE_CDN_URL=

# Documentation URL
VITE_DOCS_URL=https://docs.datarhei.com/core

# Support URL
VITE_SUPPORT_URL=https://github.com/datarhei/core/issues

# ===========================================
# Advanced Configuration
# ===========================================

# WebSocket URL (if different from API)
# VITE_WS_URL=ws://localhost:8080

# Enable service worker (PWA)
VITE_ENABLE_SW=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE=false

# ===========================================
# Notes
# ===========================================

# - All environment variables must start with VITE_ to be exposed to the app
# - Boolean values should be 'true' or 'false' (as strings)
# - Changes require dev server restart
# - Never commit .env file with secrets to version control
